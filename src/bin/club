#!/usr/bin/env node
const pkg = require('../../package.json');
 
require('commander')
    .version(pkg.version)
    .description(pkg.description)
    .command('install [options]', 'install and configure API access')
    .command('find [options]', 'find stories with optional query',
        { isDefault: true })
    .command('story [options]', 'view or manipulate stories')
    .command('wf [options]', 'list workflows and their states')
    .command('members [options]', 'list members')
    .parse(process.argv);
