#!/usr/bin/env node
const pkg = require('../../package.json');
 
require('commander')
    .version(pkg.version)
    .description(pkg.description)
    .command('install', 'install and configure API access')
    .command('search [query]', 'search stories with optional query',
        { isDefault: true })
    .command('story', 'view or manipulate stories')
    .command('wf', 'list workflows and their states')
    .parse(process.argv);
